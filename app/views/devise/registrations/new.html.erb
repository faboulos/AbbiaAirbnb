<div class="rows">
  <div class="col-md-4 col-md-offset-4 text-center">

        <h2>Inscription</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Adresse e-email" %>
          </div>

          <div class="form-group">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"crÃ©ez mot de passe" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"retapez mot de passe" %>
          </div>

          <div class="actions">
            <%= f.submit "Inscription",  class:"btn btn-primary" %>
          </div>
        <% end %>

  </div>
</div>
